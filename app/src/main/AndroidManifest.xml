<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.o.coelation">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.info.o.coelation.InfoListActivity"
            android:label="@string/title_info_list"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.o.coelation.MainActivity" />
        </activity>
        <activity
            android:name="com.info.o.coelation.InfoDetailActivity"
            android:label="@string/title_info_detail"
            android:parentActivityName="com.info.o.coelation.InfoListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.info.o.coelation.InfoListActivity" />
        </activity>
        <activity
            android:name="com.glossary.o.coelation.GlossaryListActivity"
            android:label="@string/title_glossary_list"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.o.coelation.MainActivity" />
        </activity>
        <activity
            android:name="com.glossary.o.coelation.GlossaryDetailActivity"
            android:label="@string/title_glossary_detail"
            android:parentActivityName="com.glossary.o.coelation.GlossaryListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.glossary.o.coelation.GlossaryListActivity" />
        </activity>
    </application>

</manifest>